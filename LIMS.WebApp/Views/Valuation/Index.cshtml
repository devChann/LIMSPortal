@model IEnumerable<LIMS.Core.Entities.Valuation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValuationBookNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValuationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valuer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SerialNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValuationBookNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValuationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valuer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ValuationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ValuationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ValuationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
