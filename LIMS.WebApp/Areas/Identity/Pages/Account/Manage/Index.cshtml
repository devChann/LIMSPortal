
@page "/account/manage/"

@model IndexModel
@{
    ViewData["Title"] = "Update profile";
}


@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<section class="row">
    <div class="col-md-12">

		<div class="card">
			<div class="card-header">
				<h4 class="card-title">@ViewData["Title"]</h4>
			</div>

			<div class="card-content">
				<div class="card-body">
					<form method="post" enctype="multipart/form-data">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div>
							<img asp-controller="Photo" asp-action="Index" src="~/photo" class="img-fluid" width="100" />
							<div class="form-group">
								<label asp-for="Input.Photo"></label>
								<input asp-for="Input.Photo" type="file" class="form-control" />
								<span asp-validation-for="Input.Photo" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group">
							<label asp-for="Input.FirstName"></label>
							<input asp-for="Input.FirstName" class="form-control" />
						</div>
						<div class="form-group">
							<label asp-for="Input.Middlename"></label>
							<input asp-for="Input.Middlename" class="form-control" />
						</div>						

						<div class="form-group">
							<label asp-for="Input.LastName"></label>
							<input asp-for="Input.LastName" class="form-control" />
						</div>
						<div class="form-group">
							<label asp-for="Input.Email"></label>
							@if (Model.IsEmailConfirmed)
							{
								<div class="input-group">
									<input asp-for="Input.Email" class="form-control" autocomplete="email" />
									<span class="input-group-addon" aria-hidden="true"><span class="fa fa-check-circle glyphicon-ok text-success"></span></span>
								</div>
							}
							else
							{
								<input asp-for="Input.Email" class="form-control" autocomplete="email" />
								<button asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
							}
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Input.KRAPIN"></label>
							<input asp-for="Input.KRAPIN" class="form-control" autocomplete="tel" />
							<span asp-validation-for="Input.KRAPIN" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Input.PhoneNumber"></label>
							<input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" />
							<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
						</div>
						<div class="form-actions right">
							<button type="submit" class="btn btn-primary">
								<i class="fa fa-check-square-o"></i> Save
							</button>

						</div>

					</form>
				</div>

			</div>

		</div>

	
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
