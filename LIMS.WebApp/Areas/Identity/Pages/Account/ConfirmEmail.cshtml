@page "/account/confirmed-email"
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<section class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<h2 class="card-title">@ViewData["Title"]</h2>
			</div>
			<div class="card-content">
				<div class="card-body">
					<p>
						Thank you for confirming your email.
					</p>
					<a asp-area="Identity" asp-page="/Account/Login" class="btn btn-lg btn-success">Login</a>
				</div>
			</div>
		</div>
	</div>
</section>
