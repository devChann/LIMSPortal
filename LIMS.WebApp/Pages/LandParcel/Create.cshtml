@page
@model CreateModel
@{
}

<div>
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-page="Index">Parcel</a>
		</li>
		<li class="breadcrumb-item active">Create-Parcel</li>
	</ol>
</div>

<section class="row">

	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Create New Parcel</h4>
			</div>
			<div class="card-content">
				<div class="card-body">
					<div class="border">
						<form method="post">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="container" style="padding:30px;">
								<div class="form-group">
									<div class="row">
										<div class="col-sm-2">
											<label asp-for="Parcel.ParcelNum"></label>
										</div>
										<div class="col-sm-4">
											<input asp-for="Parcel.ParcelNum" class="form-control" />
											@*<select name="authorId" asp-items="Model.TenureTypes"></select>*@
										</div>
										<span asp-validation-for="Parcel.ParcelNum" class="text-danger"></span>
									</div>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-2">
											<label asp-for="Parcel.Administration.BlockName"></label>
										</div>
										<div class="col-sm-4">
											<input asp-for="Parcel.Administration.BlockName" class="form-control" />
										</div>
									</div>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-2">
											<label asp-for="Parcel.Tenure.TenureType"></label>
										</div>
										<div class="col-sm-4">
											<input asp-for="Parcel.Tenure.TenureType" class="form-control" />
										</div>
									</div>
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col-sm-2 offset-sm-2">
											<input type="submit" value="Create" class="btn btn-primary form-control" />
										</div>
										<div class="col-sm-2">
											<a asp-page="Index" class="btn btn-success form-control">Back to List</a>
										</div>

									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>

		</div>

	</div>
</section>

@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


