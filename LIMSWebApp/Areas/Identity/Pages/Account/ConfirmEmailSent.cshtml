@page
@model LIMSWebApp.Areas.Identity.Pages.Account.ConfirmEmailSentModel
@{
	ViewData["Title"] = "Confirm Email";
}


<div class="mt-4">
	<p>
		We have created your account! But first we need to confirm you own your email before we let you in. Kindly Check your inbox for a confirmation link we have sent to you.
	</p>
	<p>Your email is: @Model.Email</p>
	<p>Once you have successfully confirmed your email you will be able to login. </p>
	<a asp-area="Identity" asp-page="/Account/Login" class="btn btn-lg btn-success">Login</a>
</div>
