
@page "/account/manage/"

@model IndexModel
@{
    ViewData["Title"] = "User Profile";
}

<h4>@ViewData["Title"]</h4>

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<div class="row">
    <div class="col-md-6">

		<form method="post" enctype="multipart/form-data">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div>
				<img asp-controller="Photo" asp-action="Index" src="~/photo" class="profile-photo" />
				<div class="form-group">
					<label asp-for="Input.Photo"></label>
					<input asp-for="Input.Photo" type="file" class="form-control" />
					<span asp-validation-for="Input.Photo" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="Username"></label>
				<input asp-for="Username" class="form-control" disabled />
			</div>
			<div class="form-group">
				<label asp-for="Input.Email"></label>
				@if (Model.IsEmailConfirmed)
				{
					<div class="input-group">
						<input asp-for="Input.Email" class="form-control" autocomplete="email" />
						<span class="input-group-addon" aria-hidden="true"><span class="fa fa-check-circle glyphicon-ok text-success"></span></span>
					</div>
				}
				else
				{
					<input asp-for="Input.Email" class="form-control" autocomplete="email" />
					<button asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
				}
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.KRAPIN"></label>
				<input asp-for="Input.KRAPIN" class="form-control" autocomplete="tel" />
				<span asp-validation-for="Input.KRAPIN" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.PhoneNumber"></label>
				<input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" />
				<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-default">Save</button>
		</form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
