@page "/account/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="All" class="alert-danger"></div>
            <div class="form-group">
                <i class="fa fa-user"></i>
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-envelope"></i>
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-id-card"></i>
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-id-card"></i>
                <label asp-for="Input.KRAPIN"></label>
                <input asp-for="Input.KRAPIN" class="form-control" />
                <span asp-validation-for="Input.KRAPIN" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-lock"></i>
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa fa-check"></i>
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="alert-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-info">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
