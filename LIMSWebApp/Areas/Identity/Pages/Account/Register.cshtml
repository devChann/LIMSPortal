@page "/account/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-6 mx-auto text-center">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Register</h2>
            <hr />
            <div asp-validation-summary="All" class="alert-danger"></div>
            
                    <div class="row">
                        <div class="form-group col-md-6">
                            <i class="fa fa-user"></i>
                            <label asp-for="Input.FirstName"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="alert-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <i class="fa fa-user"></i>
                            <label asp-for="Input.LastName"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="alert-danger"></span>
                        </div>
                        
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <i class="fa fa-user"></i>
                            <label asp-for="Input.MiddleName"></label>
                            <input asp-for="Input.MiddleName" class="form-control" />
                            <span asp-validation-for="Input.MiddleName" class="alert-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <i class="fa fa-user"></i>
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <span asp-validation-for="Input.UserName" class="alert-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <i class="fa fa-user"></i>
                            <label asp-for="Input.IDNumber"></label>
                            <input asp-for="Input.IDNumber" class="form-control" />
                            <span asp-validation-for="Input.IDNumber" class="alert-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <i class="fa fa-id-card"></i>
                            <label asp-for="Input.KRAPIN"></label>
                            <input asp-for="Input.KRAPIN" class="form-control" />
                            <span asp-validation-for="Input.KRAPIN" class="alert-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <i class="fa fa-envelope"></i>
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="alert-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <i class="fa fa-phone"></i>
                            <label asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="alert-danger"></span>
                        </div>
                    </div>
                   
                   
                    <div class="row">
                        <div class="form-group col-md-6">
                            <i class="fa fa-lock"></i>
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="alert-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <i class="fa fa-lock"></i>
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="alert-danger"></span>
                        </div>
                    </div>                  
         
            <button type="submit" class="btn btn-block btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
