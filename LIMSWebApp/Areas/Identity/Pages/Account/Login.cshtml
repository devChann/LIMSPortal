@page "/account/sign-in"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-4 mx-auto text-center">
        <div id="divLoader" style="display:none;">
            <img src="~/images/ajax-loader.gif" />
        </div>

        <form method="post">
            <h2 class="form-signin-heading"><i class="fa fa-user"></i> Sign in</h2>
            <hr />
            <div asp-validation-summary="All" class="alert-danger">
            </div>

            <div class="form-group">
                @*<i class="fa fa-user"></i>*@
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="UserName/Email"/>
                <span asp-validation-for="Input.Email" class="alert-danger"></span>
            </div>
            <div class="form-group">
                @*<i class="fa fa-lock"></i>*@
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info">Sign in</button>
            </div>
            <div class="form-group">
                <p>
                    <a asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
            </div>
        </form>
    </div>
