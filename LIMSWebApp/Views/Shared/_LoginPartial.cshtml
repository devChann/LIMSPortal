@using Microsoft.AspNetCore.Identity
@using LIMSInfrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form class="form-inline ml-auto" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" id="logoutForm">
    @*<div class="nav-item">
        <marquee><span class="text-info">You are logged in as @UserManager.GetUserName(User)</span></marquee>
    </div>*@
    <div class="nav-item">
        <a class="nav-link text-light" asp-controller="Home" asp-action="Services">Services</a>
    </div>
    <div class="nav-item">
        <a class="nav-link text-light" asp-controller="Properties" asp-action="Properties">My Properties</a>
    </div>
    
    <div class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index">  <span><img class="user-img-circular" src="/Photo" /></span> <span class="user-name">@UserManager.GetUserName(User)</span></a>
    </div>
    <div class="nav-item">
        <button type="submit" class="btn btn-outline-danger nav-link" >Logout</button>
    </div>

</form>
}
else
{
<form class="form-inline ml-auto">
    <div class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
    <div class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
</form>
   

}