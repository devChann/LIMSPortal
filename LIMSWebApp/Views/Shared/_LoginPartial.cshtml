@using Microsoft.AspNetCore.Identity
@using LIMSInfrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
    <ul class="nav navbar-nav pull-right " style="margin-top:30px; margin-right:110px">
        <li class="btn-group nav">
            <button type="button" class="btn navbar-btn " style="background-color:lightseagreen">
              Welcome,  @UserManager.GetUserName(User)
            </button>
            <button type="button" class="btn navbar-btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li>
                    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                        <span class="glyphicon glyphicon-pencil"></span> Manage Account
                    </a>
                </li>
                <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link" style="border:none;">
                        <span class="glyphicon glyphicon-log-out"></span> Log out
                    </button>
                </li>
            </ul>
        </li>

    </ul>
    

</form>
}
else
{
    <ul class="nav navbar-nav pull-right">
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Login">
                <span class="glyphicon glyphicon-log-in"></span> Log in
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Register">
                <span class="glyphicon glyphicon-user"></span> Register
            </a>
        </li>
    </ul>
   


}
