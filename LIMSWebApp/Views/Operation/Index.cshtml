@model IEnumerable<LIMSCore.Entities.Operation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OperationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parcel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OperationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parcel.ParcelNum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OperationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OperationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OperationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
