@model IEnumerable<LIMSCore.Entities.Restriction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LandUseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestrictionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chrage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morgage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reserve)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statutory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LandUseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestrictionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chrage.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Morgage.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reserve.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statutory.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
