@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity
@model LIMSWebApp.ViewModels.AccountViewModels.LoginViewModel
@using LIMSInfrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager

@{
    
    Layout ="_LayoutNav";
}

<div class="container">

    <div class="panel panel-default">

        <div class="panel-body">
            <div class="text-center  col-md-4 col-md-offset-4 rounded box" style="box-shadow:0px 0px 1px 1px;">
                <div id="divLoader" style="display:none;"> <img src="~/images/ajax-loader (2).gif" alt="Loader" /> </div>
                <section id="login">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <h4>Login</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <i class="glyphicon glyphicon-user"></i>
                            <input asp-for="UserName" class="form-control" placeholder="User Name" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <i class="glyphicon glyphicon-lock"></i>
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default" id="btnSubmit">Log in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a asp-action="ForgotPassword" style="color:white">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" style="color:white">Register as a new user?</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            </div>
        </div>
    </div>
  @section Scripts {
                @await Html.PartialAsync("_ValidationScriptsPartial")
            }
