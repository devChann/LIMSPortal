@using Microsoft.Extensions.Options
@using LIMSInfrastructure.Services.Payment
@inject IOptions<StripeSettings> Stripe

<form action="/Payments/Charge" method="POST">
    <div>
        <h3>Make Payment</h3>
    </div>
    <article>
        <label>Amount: $ 5.00</label>
    </article>
    <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key="@Stripe.Value.StripePublishableKey"
            data-locale="auto"
            data-description="Sample Charge"
            data-amount="500">
    </script>

</form>

<div style="margin-top:20px">
    <a asp-controller="Payments" asp-action="PaywithMpesa" class="btn btn-outline-success">Pay With M-Pesa</a>
</div>

