@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<LIMSWebApp.ViewModels.MpesaModels.PaymentsListViewModel>


<div class="row">
    @if (Model.Any())
    {
        <div class="col-md-12">
            <h3>Payments History</h3>
            <table class="table table-hover table-light table-bordered table-responsive-md">
                <thead class="thead-dark">
                    <tr>

                        <th>
                            @*@Html.DisplayNameFor(model => model.PaymentDate)*@
                            Payment Date
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.CustomerName)*@
                            Customer Name
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
                            Phone Number
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Amount)*@
                            Amount
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.CheckOutID)*@
                            Checkout ID
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.ReceiptNumber)*@
                            Receipt Number
                        </th>                     
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <th>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CheckOutID)
                            </td>
                            <th>
                                @Html.DisplayFor(modelItem => item.ReceiptNumber)
                            </th>                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    }
    else
    {
        <p class="alert-info"></p>
        <div class="alert alert-info">
            <strong>There are no payment records</strong>
        </div>

    }

</div>

@Html.PagedListPager(Model, page => Url.Action("PaymentsList", new { page }))

