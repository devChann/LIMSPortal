@model LIMSCore.Billing.Invoice

@{
    ViewData["Title"] = "Details";
}

<div class="">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-controller="Home" asp-action="Index">Home</a>
		</li>
		<li class="breadcrumb-item">
			<a asp-controller="Properties" asp-action="Properties">properties</a>
		</li>
		<li class="breadcrumb-item">
			<a asp-controller="Invoice" asp-action="Index">my-Invoices</a>
		</li>
		<li class="breadcrumb-item active">invoice-details</li>
	</ol>
</div>

<div>
    <h4 class="text-muted">Invoice Details</h4>
    <hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.InvoiceNumber)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.InvoiceNumber)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.InvoiceAmount)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.InvoiceAmount)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DateCreated)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DateCreated)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DateDue)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DateDue)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Parcel)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Parcel.ParcelNum)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Status)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Status)
		</dd>
	</dl>
</div>
<div>
	<a class="btn btn-sm btn-success" data-tippy="Make Payment" href="@Url.Action("checkout", "Payments", new { property = Model.Parcel.ParcelNum, invoicenumber = Model.InvoiceNumber })" class="text-warning">
		<i class="fa fa-money-bill-alt"></i> Make Payment
	</a> |
	<a asp-action="Edit" asp-route-id="@Model.InvoiceId">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
