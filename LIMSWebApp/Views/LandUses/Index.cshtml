@model IEnumerable<LIMSCore.Entities.LandUse>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LandUseStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LandUseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegulationAgency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildingRegulations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LandUseStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LandUseType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegulationAgency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingRegulations.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zone.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
